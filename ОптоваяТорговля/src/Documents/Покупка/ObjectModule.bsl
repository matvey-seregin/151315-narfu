#КонецОбласти

#Область СлужебныеПроцедурыИФункции

Процедура СформироватьДвиженияОстаткиТоваров()
	
	// регистр ОстаткиТоваров
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ПокупкаСписокНоменклатуры.Номенклатура КАК Номенклатура,
		|	ПокупкаСписокНоменклатуры.Количество КАК Количество,
		|	ПокупкаСписокНоменклатуры.Сумма КАК Сумма
		|ИЗ
		|	Документ.Покупка.СписокНоменклатуры КАК ПокупкаСписокНоменклатуры
		|ГДЕ
		|	ПокупкаСписокНоменклатуры.Ссылка = &Ссылка
		|	И ПокупкаСписокНоменклатуры.Номенклатура.ТипНоменклатуры = ЗНАЧЕНИЕ(Перечисление.ТипНоменклатуры.Товар)";
	
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Движения.ОстаткиТоваров.Записывать = Истина;
	Пока Выборка.Следующий() Цикл
		
		Движение = Движения.ОстаткиТоваров.Добавить();
		Движение.Период = Дата;
		Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
		Движение.Номенклатура = Выборка.Номенклатура;
		Движение.Количество = Выборка.Количество;
		
	КонецЦикла;
	
КонецПроцедуры

Процедура СформироватьДвиженияЗадолженностьПередПоставщиками()
	
	Движения.ЗадолженостьПередПоставщиками.Очистить();
	Движения.АвансыПоставщикам.Очистить();

	Движения.ЗадолженостьПередПоставщиками.Записывать = Истина;
	Движения.АвансыПоставщикам.Записывать = Истина;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	АвансыПоставщикамОстатки.СуммаОстаток КАК Аванс
		|ИЗ
		|	РегистрНакопления.АвансыПоставщикам.Остатки(
		|			&Дата,
		|			Контрагент = &Контрагент
		|				И Договор = &Договор) КАК АвансыПоставщикамОстатки";
	
	Запрос.УстановитьПараметр("Дата", Дата);
	Запрос.УстановитьПараметр("Договор", ДоговорКонтрагента);
	Запрос.УстановитьПараметр("Контрагент", Контрагент);
	
	РезультатЗапроса = Запрос.Выполнить().Выбрать();
	
	Аванс = 0;
	
	Если РезультатЗапроса.Следующий() Тогда
		Аванс = РезультатЗапроса.Аванс;
	КонецЕсли;
	
	Если Аванс > 0 Тогда
		
		СуммаАванса = Мин(Аванс, СуммаДокумента);
		
		ДвижениеАванс = Движения.АвансыПоставщикам.Добавить();
		ДвижениеАванс.Период = Дата;
		ДвижениеАванс.ВидДвижения = ВидДвиженияНакопления.Расход;
		ДвижениеАванс.Контрагент = Контрагент;
		ДвижениеАванс.Договор = ДоговорКонтрагента;
		ДвижениеАванс.Сумма = СуммаАванса;
		
		Если СуммаДокумента > Аванс Тогда
			Движение = Движения.ЗадолженостьПередПоставщиками.Добавить();
			Движение.Период = Дата;
			Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
			Движение.Контрагент = Контрагент;
			Движение.Договор = ДоговорКонтрагента;
			Движение.Сумма = СуммаДокумента - Аванс;
		КонецЕсли;
		
	Иначе
		Движение = Движения.ЗадолженостьПередПоставщиками.Добавить();
		Движение.Период = Дата;
		Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
		Движение.Контрагент = Контрагент;
		Движение.Договор = ДоговорКонтрагента;
		Движение.Сумма = СуммаДокумента - Аванс;
		
	КонецЕсли;
	
КонецПроцедуры


